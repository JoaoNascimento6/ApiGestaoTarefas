{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "tarefas": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "tarefaId": {
              "type": "string",
              "format": "uuid"
            },
            "titulo": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "descricao": {
              "type": "string",
              "minLength": 40,
              "maxLength": 100
            },
            "estado": {
              "type": "string",
              "enum": ["concluido", "Hoje", "Agendado"]
            },
            "dataVencimento": {
              "type": "string",
              "format": "date"
            },
            "prioridade": {
              "type": "integer",
              "minimum": 0,
              "maximum": 20
            }
          },
          "required": ["tarefaId", "titulo", "descricao", "estado", "dataVencimento", "prioridade"]
        }
      }
    }
  }
  