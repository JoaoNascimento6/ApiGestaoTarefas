{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tarefasUser": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uuid",
          "description": "O ID do usuário associado à tarefa.",
          "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
        },
        "nome": {
          "type": "string"
        },
        "tarefas": {
          "$ref": "../Tarefas/criarAtualizarTarefa/index.json"
        }
      },
      "required": [
        "userId",
        "nome",
        "tarefas"
      ]
    }
  },
  "required": [
    "tarefasUser"
  ]
}